<div class="main posts-index">
  <div class="container">
    <p><%= flash[:pesan] %></p>
    <a href="/postingan/input">Input Data</a>
    <table border="1">
      <tr>
        <th>No</th>
        <th>Judul</th>
        <th>Deskripsi</th>
        <th>Action</th>
      </tr>
      <% no=0 
      @data.each do |value| %>
      <tr>
        <td><%= no=no+1 %></td>
        <td><%= value.title %></td>
        <td><%= value.content %></td>
        <td>
          <a href="/post/detail/<%= value.id %>">Detail</a> | 
          <a href="/post/edit/<%= value.id %>">Edit</a> | 
          <a href="/post/delete/<%= value.id %>" onclick="return confirm('Yakin Mau Hapus Data?')">Delete</a>
        </td>
      </tr>
      <%end%>
    </table>
  </div>
</div>
